<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="wrap_content" android:id="@+id/textView"
        android:textColor="#a1a1a1" android:textSize="@dimen/fontSize_12sp"
        android:gravity="center" android:layout_centerHorizontal="true"
        android:layout_height="50dp"  android:text="加载中...."/>
    <ProgressBar
        android:layout_width="25dp"
        android:id="@+id/progressBar"
        android:layout_height="25dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_marginRight="@dimen/dp_5"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:visibility="gone"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="@dimen/dp_5"
        />
</RelativeLayout>

